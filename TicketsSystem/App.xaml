<Application x:Class="TicketsSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TicketsSystem"
             xmlns:views="clr-namespace:TicketsSystem.Views"
             xmlns:viewmodels="clr-namespace:TicketsSystem.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ReservationViewModel}">
            <views:ReservationView/>
        </DataTemplate>
    </Application.Resources>
</Application>
